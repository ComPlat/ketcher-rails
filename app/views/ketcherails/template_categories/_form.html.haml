= form_for @template_category do |f|
  - if @template_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@template_category.errors.count, "error")} prohibited this template_category from being saved:"
      %ul
        - @template_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :icon
    - if @template_category&.icon_file_name.present?
      = image_tag '/images/ketcherails/icons/small/' + @template_category&.icon_file_name
    = f.file_field :svg
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
